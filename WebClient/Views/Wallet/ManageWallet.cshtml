@model WalletManagementVM

<div class="container">
    <h1 style="margin-bottom:2vh;">Wallet management</h1>


    <div class="row">
        <div class="col-md-6">
            <form asp-action="ManageWallet" asp-controller="Wallet" method="post">
                <div class="form-group">
                    <label class="control-label" asp-for="WalletJMBG">Wallet JMBG:</label>
                    <input class="form-control" asp-for="WalletJMBG" />
                    <span asp-validation-for="WalletJMBG" class="text-dark"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="AdminPASS">Admin password:</label>
                    <input type="password" class="form-control" asp-for="AdminPASS" autocomplete="off" />
                    <span asp-validation-for="AdminPASS" class="text-dark"></span>
                </div>

                <div class="form-check-inline">
                    <input class="form-check-input" type="radio" id="radio1" asp-for="Action" value="Block" checked>
                    <label class="form-check-label" for="radio1" asp-for="Action">
                        Block
                    </label>
                    <span asp-validation-for="Action" class="text-dark"></span>
                </div>
                <div class="form-check-inline">
                    <input class="form-check-input" type="radio" id="radio2" asp-for="Action" value="Unblock">
                    <label class="form-check-label" for="radio2" asp-for="Action">
                        Unblock
                    </label>
                    <span asp-validation-for="Action" class="text-dark"></span>
                </div>

                <input type="submit" value="Confirm" class="btn btn-primary mt-2" />
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="modalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalContent">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/helper.js"></script>
    @if (ViewData["Success"] != null)
    {
        <script type="text/javascript">ShowMessage('@ViewData["Success"].ToString()', '@(ViewData["SuccessMessage"]== null ? "" :ViewData["SuccessMessage"].ToString())', '@(ViewData["ErrorMessage"] == null ? "" : ViewData["ErrorMessage"])');</script>
    }
}