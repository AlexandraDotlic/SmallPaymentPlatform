@model WalletInfoVM

<div class="container">
    <h1>Get wallet information</h1>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="WalletInfo" asp-controller="Wallet" method="post">
                <div class="form-group">
                    <label class="control-label" asp-for="WalletInfoRequestVM.JMBG">Jmbg:</label>
                    <input class="form-control" asp-for="WalletInfoRequestVM.JMBG" />
                    <span asp-validation-for="WalletInfoRequestVM.JMBG" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="WalletInfoRequestVM.PASS">Password:</label>
                    <input type="password" class="form-control" asp-for="WalletInfoRequestVM.PASS" autocomplete="off" />
                    <span asp-validation-for="WalletInfoRequestVM.PASS" class="text-danger"></span>
                </div>

                <input type="submit" value="Confirm" class="btn btn-primary" />
            </form>
        </div>
    </div>
    @if (Model != null && Model.WalletInfoResponseVM != null)
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Jmbg")
                </th>
                <th>
                    @Html.DisplayName("First name")
                </th>
                <th>
                    @Html.DisplayName("Last name")
                </th>
                <th>
                    @Html.DisplayName("Status")
                </th>
                <th>
                    @Html.DisplayName("Bank")
                </th>
                <th>
                    @Html.DisplayName("Bank account number")
                </th>
                <th>
                    @Html.DisplayName("Balance")
                </th>
                <th>
                    @Html.DisplayName("Used monthly deposit")
                </th>
                <th>
                    @Html.DisplayName("Used monthly withdraw")
                </th>

            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.WalletInfoResponseVM.JMBG)
                </td>
                <td>
                    @Html.DisplayFor(model => model.WalletInfoResponseVM.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.WalletInfoResponseVM.LastName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.WalletInfoResponseVM.Status)
                </td>
                <td>
                    @Html.DisplayFor(model => model.WalletInfoResponseVM.Bank)
                </td>
                <td>
                    @Html.DisplayFor(model => model.WalletInfoResponseVM.BankAccountNumber)
                </td>
                <td>
                    @Html.DisplayFor(model => model.WalletInfoResponseVM.BalanceString)
                </td>
                <td>
                    @Html.DisplayFor(model => model.WalletInfoResponseVM.UsedDepositString)
                </td>
                <td>
                    @Html.DisplayFor(model => model.WalletInfoResponseVM.UsedWithdrawString)
                </td>
            </tr>
        </table>

    }
</div>

<div class="modal fade" id="modalCenter" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalContent">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/helper.js"></script>
    @if (ViewData["Success"] != null && ViewData["Success"].ToString() == "False")
    {
        <script type="text/javascript">ShowMessage('@ViewData["Success"].ToString()', '', '@(ViewData["ErrorMessage"] == null ? "" : ViewData["ErrorMessage"])');</script>
    }
}

